  zoo_id: CX-12
  d_state: 512
  free_energy:
    T_bounds: [0.6, 1.6] # Min/max operational temperature
    S_max: 1.8 # Max allowed output entropy
    E_id_weights: {drift: 1.0, boundary: 1.5}
  safety_thresholds:
