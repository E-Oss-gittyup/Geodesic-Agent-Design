  zoo_id: CX-8
  d_state: 512
  stochastic_resonance:
    T0: 1.2  # Base temperature at zero coherence
    T_min: 0.7 # Safety floor for temperature
    T_max: 1.6 # Safety ceiling for temperature
    noise_sites: [retrieval_rerank, plan_select, param_sweep]
  safety_thresholds:
    C_min: 0.80
    D_max: 0.20
    Î¸_ver: 0.25
