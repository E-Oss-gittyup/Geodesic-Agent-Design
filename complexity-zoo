  zoo_id: CX-6
  d_state: 512
  paraconsistent_routing:
    rho_max: 0.70 # Max allowed contradiction for synthesis
    paired_caps: [retrieve, plan, critique, draft]
  safety_thresholds:
    C_min: 0.80
    D_max: 0.20
    Î¸_ver: 0.25
